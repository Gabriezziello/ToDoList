@model TechTestToDoList.Dal.ViewModels.TaskViewModel
@{ 
    Layout = null;
}
<div class="col-lg-12">
    <div class="form-group">
        <input type="hidden" id="TaskId" value="@Model.Id"/>
        <label for="title">Title</label>
        <input type="text" class="form-control" id="Tasktitle" placeholder="Enter a title" value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="Taskdescription" rows="3">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="updateDate">Last Update - @Model.LastUpdate </label>        
    </div>
    <div class="form-group">
        <label for="updateDate">Checked</label>
        <input type="checkbox"  id="Taskcheck" @(Model.Checked ? "checked" : "")>
    </div>
    
</div>
<div class="clearfix"></div>
